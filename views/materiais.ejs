<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <title>Gestão de Materiais - Sistema de Gestão</title>
  <link rel="stylesheet" href="/css/layout.css" />
  <link rel="stylesheet" href="/css/nav.css" />
  <link rel="stylesheet" href="/css/materiais.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body>
  <%- include('partials/nav', { activePage: activePage || 'materiais', usuario: usuario }) %>

  <div class="container">
    <header class="page-header">
      <h1>Gerenciamento de Materiais</h1>
      <div class="page-subtitle">Controle e gestão de materiais em estoque</div>
    </header>

    <section class="section">
      <h2><i class="fa fa-plus-circle"></i> Cadastrar Novo Material</h2>
      <form action="/materiais" method="POST" class="form-cadastro">
        <div class="form-group">
          <label for="nome">Nome do Material</label>
          <input id="nome" name="nome" type="text" required placeholder="Digite o nome do material" value="<%= typeof nome !== 'undefined' ? nome : '' %>">
        </div>
        <div class="form-group">
          <label for="quantidade">Quantidade</label>
          <input id="quantidade" name="quantidade" type="number" min="0" step="1" required value="<%= typeof quantidade !== 'undefined' ? quantidade : '0' %>">
        </div>
        <button type="submit" class="btn-adicionar"><i class="fa fa-plus"></i> Adicionar Material</button>
      </form>
    </section>

    <section class="section">
      <h2><i class="fa fa-clipboard-list"></i> Lista de Materiais</h2>
      <div class="tabela-container">
        <% if (Array.isArray(materiais) && materiais.length > 0) { %>
          <table class="tabela-materiais">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Quantidade</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% materiais.forEach(material => { %>
              <tr>
                <form action="/materiais/editar/<%= material.id %>" method="POST">
                  <td>
                    <input type="text" name="nome" value="<%= material.nome %>" required />
                  </td>
                  <td>
                    <input type="number" name="quantidade" value="<%= material.quantidade %>" required min="0" />
                  </td>
                  <td class="acoes-cell">
                    <button type="submit" class="btn-acao btn-editar"><i class="fa fa-save"></i> Salvar</button>
                    <button formaction="/materiais/deletar/<%= material.id %>" formmethod="POST" class="btn-acao btn-deletar" onclick="return confirm('Confirma exclusão?')"><i class="fa fa-trash"></i> Excluir</button>
                  </td>
                </form>
              </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <div class="empty-state">
            <div class="empty-icon"><i class="fa fa-box-open"></i></div>
            <div class="empty-text">Nenhum material cadastrado.</div>
            <div class="empty-subtext">Adicione novos materiais para visualizar aqui.</div>
          </div>
        <% } %>
      </div>
    </section>
  </div>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</body>
</html>
