<header>
  <h1>Gerenciamento de Materiais</h1>
</header>

<section>
  <h2>Cadastrar novo material</h2>
  <form action="/materiais" method="POST">
    <label for="nome">Nome do material:</label>
    <input type="text" id="nome" name="nome" required />

    <label for="quantidade">Quantidade:</label>
    <input type="number" id="quantidade" name="quantidade" required min="0" />

    <button type="submit">Adicionar Material</button>
  </form>
</section>

<section>
  <h2>Lista de Materiais</h2>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Quantidade</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% materiais.forEach(material => { %>
        <tr>
          <form action="/materiais/editar/<%= material.id %>" method="POST">
          <td><input type="text" name="nome" value="<%= material.nome %>" required /></td>
          <td><input type="number" name="quantidade" value="<%= material.quantidade %>" required min="0" /></td>
          <td>
            <button type="submit">Editar</button>
            <button formaction="/materiais/deletar/<%= material.id %>" formmethod="POST" onclick="return confirm('Confirma exclusão?');">Deletar</button>
          </td>
          </form>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
